<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rut_inter">

    <!-- Inclusión del menú de navegación inferior -->
    <include
        android:id="@+id/bottom_menu"
        layout="@layout/bottom_navehgation_menu"
        android:layout_width="0dp"
        android:layout_height="55dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Saludo de Rutas -->
    <TextView
        android:id="@+id/textViewGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rutas"
        android:textColor="#065A9E"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="36dp" />

    <!-- Botón de rutas recomendadas -->
    <ImageButton
        android:id="@+id/rut_recom"
        android:layout_width="181dp"
        android:layout_height="183dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/guia_turistica"
        app:layout_constraintTop_toBottomOf="@id/textViewGreeting"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Texto de ruta actual -->
    <TextView
        android:id="@+id/recomendaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rutas Recomendadas"
        android:textColor="#065A9E"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/rut_recom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Botón de ruta actual -->
    <ImageButton
        android:id="@+id/rut_actual"
        android:layout_width="227dp"
        android:layout_height="228dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/destino"
        app:layout_constraintTop_toBottomOf="@id/recomendaciones"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Texto de rutas recomendadas -->
    <TextView
        android:id="@+id/actual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruta Actual"
        android:textColor="#065A9E"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/rut_actual"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
